<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	tools:context=".GeneralActivity" >
    	
	<LinearLayout
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical">
    
	    
	   	<TextView
	        android:id="@+id/label_choose_video_container"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:paddingTop="10dp"
			android:paddingLeft="5dp"
	        android:text="@string/lbl_choose_video_container" />
	   	
	   	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_horizontal"
	        android:paddingTop="10dp"
		    android:weightSum="2">
	        	   	    	   	  
	   	    	   	  
	   	    <TextView
		       	android:id="@+id/label_path_choosen_video_container"
				android:layout_width="0dp"
			    android:layout_weight="1.4"
		        android:layout_height="match_parent"
		        android:textSize="14sp"
		        android:gravity="center"
		        android:paddingLeft="10dp"
		        android:drawableLeft="@drawable/video"
		        android:text="@string/lbl_empty_choose_video_container" />
	   	   
	   	  	<Button
	        	android:id="@+id/btn_choose_video_container"
		        android:layout_width="0dp"
		        android:layout_weight="0.6"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="@string/btn_choose_video_container" />
	   	  		   	
	  	</LinearLayout>
	   		    	   		    
   	   	<TextView
	        android:id="@+id/label_choose_video_destination"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:paddingTop="10dp"
	        android:paddingLeft="5dp"
	        android:text="@string/lbl_choose_video_destination" />   	   	
   	   		   	
   	   	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_horizontal"
	        android:paddingTop="10dp"
		    android:weightSum="2">
	        	   	   	    
			<TextView
				android:id="@+id/label_path_choosen_video_destination"
				android:layout_width="0dp"
			    android:layout_weight="1.4"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:gravity="center"
		        android:drawableLeft="@drawable/folder_light_blue"
		        android:text="@string/lbl_empty_choose_video_destination" />
		    
		    <Button
		        android:id="@+id/btn_choose_video_destination"
		        android:layout_width="0dp"
		        android:layout_weight="0.6"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="@string/btn_choose_video_destination" />
	   	
	  	</LinearLayout>
   	   	
   	   	<TextView
	        android:id="@+id/label_choose_content_to_hide"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:paddingTop="10dp"
	        android:paddingLeft="5dp"
	        android:text="@string/lbl_choose_content_to_hide" />
   	   	
   	   	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="center_horizontal"
		    android:layout_marginTop="10dp"
		    android:weightSum="2">
		
		   <Button
		    	android:id="@+id/btn_text_content"
		    	style="?android:attr/buttonBarButtonStyle"
	    	    android:layout_width="0dp"
	    	    android:layout_weight="1"
		        android:layout_height="match_parent"
			    android:text="@string/btn_text_content_to_hide" />
	    
		   <Button
		    	android:id="@+id/btn_file_content"
	 	       	style="?android:attr/buttonBarButtonStyle"
		        android:layout_width="0dp"
	    	    android:layout_weight="1"
		        android:layout_height="match_parent"
			    android:text="@string/btn_file_content_to_hide" />
   	   	</LinearLayout>
   	   	
	    <EditText
	        android:id="@+id/edit_text_content_to_hide"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:inputType="textMultiLine" />

	    <LinearLayout
	        android:id="@+id/layout_file_to_hide"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="center_horizontal"
	        android:paddingTop="5dp"
	        android:visibility="gone"
		    android:weightSum="2">
	        	   	   	    
			<TextView
				android:id="@+id/label_path_choosen_file_to_hide"
				android:layout_width="0dp"
			    android:layout_weight="1.4"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:gravity="center"
		        android:drawableLeft="@drawable/file"
		        android:text="@string/lbl_empty_choose_file_to_hide" />
		    
		    <Button
		        android:id="@+id/btn_choose_file_to_hide"
		        android:layout_width="0dp"
		        android:layout_weight="0.6"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="@string/btn_choose_file_to_hide" />
	    </LinearLayout>
	    	    	   	
   	   	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:gravity="center_horizontal"
		    android:weightSum="2">

		    <Button
				android:id="@+id/btn_process"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
			    android:text="@string/btn_process" />

	    </LinearLayout>
	    
	</LinearLayout>
</ScrollView>
