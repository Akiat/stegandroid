<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	tools:context=".GeneralActivity" >
	
	<LinearLayout
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical">
    
	   	<TextView
	        android:id="@+id/label_select_video_container"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/lbl_select_video_container" />

	   	<RelativeLayout
	    	android:layout_width="fill_parent"
    		android:layout_height="fill_parent" 
    		android:orientation="horizontal">
	   		   	
		   	<TextView
		        android:id="@+id/label_path_selected_video_container"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:layout_alignParentLeft="true"
		        android:layout_toLeftOf="@+id/btn_choose_video_container"
		        android:text="@string/empty_choose_video_container" />
		   		    
		    <Button
		        android:id="@+id/btn_choose_video_container"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:layout_alignParentRight="true"
		        android:text="@string/lbl_select" />
	   	
	    </RelativeLayout>
	    
   	   	<TextView
	        android:id="@+id/label_select_video_dest"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/lbl_select_video_dest" />
	    
   	   	<RelativeLayout
	    	android:layout_width="fill_parent"
    		android:layout_height="fill_parent" 
    		android:orientation="horizontal">
	   		   	
		   	<TextView
		        android:id="@+id/label_path_selected_video_dest"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:layout_alignParentLeft="true"
		        android:layout_toLeftOf="@+id/btn_choose_video_dest"
		        android:text="@string/empty_choose_video_dest" />
		   		    
		    <Button
		        android:id="@+id/btn_choose_video_dest"
		        style="?android:attr/buttonStyleSmall"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:layout_alignParentRight="true"
		        android:text="@string/lbl_select" />
	   	
	  	</RelativeLayout>
   	   	
		<Button
			android:id="@+id/btn_process"
	        style="?android:attr/buttonStyleSmall"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/btn_process" />
	    		
        </LinearLayout>
</ScrollView>
